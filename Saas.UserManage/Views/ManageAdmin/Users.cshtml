@model IEnumerable<Saas.UserManage.Models.UserView>

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users</h2>

<p>
    @Html.ActionLink("Create New", "CreateUser")
</p>
@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr @(ViewBag.newlyAdded == item.Id ? "class=success" : "")>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roles)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditUser", new { Id = item.Id }) |            
            @Html.ActionLink("Delete", "DeleteUser", new { id=item.Id,name=item.Email })
        </td>
    </tr>
}
</table>
<p class="text-success">@ViewBag.message</p>

}
else
{
<p>Currently no users available. Please Create new ones</p>

}